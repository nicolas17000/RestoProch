# Configuration de Centreon pour les serveurs BACKEND
define host {
    use                     generic-host
    host_name               {{ inventory_hostname }}
    address                 {{ ansible_host }}
    hostgroups              backend-servers
    check_command           check-host-alive
    max_check_attempts      5
    check_interval          1
    retry_interval          2
    check_period            24x7
    notification_interval   30
    notification_period     24x7
    contacts                admin
}
